class Solution {
    public int findPeakElement(int[] a) {
        int left = 0;
        int right = a.length - 1;

        while (left < right) {
            int mid = (left + right) / 2;

            if (a[mid] > a[mid + 1]) {
                right = mid;
            } else {
                left = mid + 1;
            }
        }

        
        return left;
    }
}
